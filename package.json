{
  "name": "physium",
  "version": "1.0.0",
  "description": "",
  "engines": {
    "node": ">=8.10"
  },
  "scripts": {
    "start": "aiot start --watch",
    "build": "aiot build",
    "build:circle": "cross-env DEVICE_TYPE=WATCH SHAPE=PILL aiot build --enable-custom-component",
    "build:rect": "cross-env DEVICE_TYPE=WATCH SHAPE=RECT aiot build --enable-custom-component",  
    "release": "aiot release",
    "lint": "eslint --format codeframe --fix --ext .ux,.js src/"
  },
  "lint-staged": {
    "*.{ux,js}": [
      "prettier --write",
      "eslint --format codeframe --fix",
      "git add"
    ],
    "*.{less,css}": [
      "prettier --write",
      "stylelint --fix --custom-syntax postcss-less",
      "git add"
    ]
  },
  "devDependencies": {
    "@aiot-toolkit/jsc": "^1.0.3",
    "aiot-toolkit": "^2.0.4",
    "conditional-compilation-webpack-plugin": "^1.0.0",
    "cross-env": "^10.0.0"
  }
}
